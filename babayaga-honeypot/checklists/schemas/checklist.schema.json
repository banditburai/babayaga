{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://babayaga.dev/schemas/checklist/v2.0.0",
  "title": "Babayaga Honeypot Checklist Schema",
  "description": "JSON Schema for validating Babayaga honeypot test checklists",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Checklist metadata and information",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Unique identifier for the checklist"
        },
        "name": {
          "type": "string",
          "maxLength": 100,
          "description": "Human-readable name for the checklist"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version of the checklist"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Detailed description of what this checklist tests"
        },
        "author": {
          "type": "string",
          "maxLength": 100,
          "description": "Author or creator of the checklist"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when checklist was created"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when checklist was last updated"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 20,
          "description": "Tags for categorizing and filtering checklists"
        },
        "estimatedDuration": {
          "type": "number",
          "minimum": 0,
          "description": "Estimated total duration in milliseconds"
        }
      },
      "required": ["id", "name", "version", "description"],
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "description": "Array of test items to execute",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Unique identifier for the test item"
          },
          "title": {
            "type": "string",
            "maxLength": 100,
            "description": "Short, descriptive title for the test"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Detailed description of what this test validates"
          },
          "instructions": {
            "type": "string",
            "description": "Step-by-step instructions for the agent to follow"
          },
          "expectedOutcome": {
            "type": "string",
            "description": "What should happen when the test is executed correctly"
          },
          "verificationCriteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "maxItems": 20,
            "description": "Specific criteria to verify test completion"
          },
          "estimatedDuration": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated duration for this test in milliseconds"
          },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"],
            "description": "Complexity level of the test"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 10,
            "description": "IDs of other test items that must complete before this one"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 10,
            "description": "Tags for categorizing this specific test"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for the test item"
          }
        },
        "required": ["id", "title", "description", "instructions", "expectedOutcome", "verificationCriteria"],
        "additionalProperties": false
      },
      "minItems": 1,
      "maxItems": 100
    }
  },
  "required": ["metadata", "items"],
  "additionalProperties": false
}