{
  "name": "babayaga-test-app",
  "version": "1.0.0",
  "description": "Test app for BabaYaga Unified",
  "type": "module",
  "scripts": {
    "postinstall": "cd node_modules/babayaga && npm install",
    "start": "cd node_modules/babayaga && npm start",
    "start:built": "node node_modules/babayaga/dist/index.js",
    "start:local": "cd babayaga-unified && npm start",
    "install-unified": "npm install github:banditburai/babayaga#unified-babayaga",
    "clone-unified": "git clone -b unified-babayaga https://github.com/banditburai/babayaga.git babayaga-unified && cd babayaga-unified && npm install && npm run build",
    "update-unified": "./update-unified.sh",
    "clean": "rm -rf node_modules package-lock.json babayaga-unified"
  },
  "dependencies": {
    "babayaga": "github:banditburai/babayaga#unified-babayaga"
  }
}